<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#ccc"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="110dp"
                android:id="@+id/quaylai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_quaylai"/>
            <TextView
                android:layout_toRightOf="@+id/quaylai"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhạc đang phát"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="125dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bông Hoa Đẹp Nhất"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_below="@+id/txt1"
                android:id="@+id/img"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/bonghoa" />
            <TextView
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/txt"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="150dp"
                android:textColor="#FF5722"
                android:textSize="16sp"
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ca sĩ: Quân AP"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:background="#DFDDDD"
            android:id="@+id/tieptheo"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiếp theo"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="2dp"
            android:background="#DFDDDD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/anh"
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/yeuem"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/anh"
                android:text="Yêu Em Rất Nhiều"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/anh"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text="Ca sĩ: Hoàng Tôn"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="2dp"
            android:background="#DFDDDD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/anh1"
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/nhoanh"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/anh1"
                android:textStyle="bold"
                android:text="Missing You"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/anh1"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text="Ca sĩ: Phương Ly"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="20dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>