<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#ccc"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="120dp"
                android:id="@+id/quaylai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_quaylai"/>
            <TextView
                android:layout_toRightOf="@+id/quaylai"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông Báo"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/anh"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/coup3"/>
            <ImageView
                android:id="@+id/anh2"
                android:layout_toRightOf="@+id/anh"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/iconcaphe"/>
            <ImageView
                android:layout_marginTop="50dp"
                android:id="@+id/anh3"
                android:layout_toRightOf="@+id/anh"
                android:layout_marginLeft="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/orangetea"/>
            <ImageView
                android:layout_marginTop="70dp"
                android:id="@+id/anh4"
                android:layout_toRightOf="@+id/anh"
                android:layout_marginLeft="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icontea"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/anh"
                android:text="Bạn thích món nào nhất tại Nhà"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/anh2"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text="Cà phê sữa đậm đà"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/anh3"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text="Trà đào cam sả trứ danh"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/anh4"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text="Trà Oolong hạt sen thơm bùi"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/anh"
                android:textColor="#5C5B5B"
                android:textStyle="italic"
                android:textSize="14sp"
                android:text="Hôm qua lúc 11:01"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/anh1"
                android:layout_marginLeft="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/coup3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/anh1"
                android:text="Chào mừng thành viên của Nhà"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/anh1"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text="Nhớ thử ngay Trà Trái Cây hoặc Cà phê đậm"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/anh1"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text="đà của Nhà nhé. Đặt ngay đơn hàng đầu tiên"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/anh1"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text="và tích điểm BEAN ngay nào!"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/anh1"
                android:textColor="#5C5B5B"
                android:textStyle="italic"
                android:textSize="14sp"
                android:text="Thứ Ba tuần trước lúc 11:00"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="20dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>